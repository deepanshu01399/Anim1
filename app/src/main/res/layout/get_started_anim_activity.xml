<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue"
    tools:context=".activity.GetStartedAnim">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="294dp"
        android:layout_height="299dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/allu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtshopday"
        android:text="Shop Day"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/image1"
        android:textSize="30dp"
        android:textColor="@drawable/state_on_off_textcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtshopDayMsg"
        app:layout_constraintTop_toBottomOf="@id/txtshopday"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="Buying somthing much organised and healty"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="italic"
        android:paddingHorizontal="30dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/state_on_off_btn_selector"
        style="@style/btnTextAnimation1"
        android:text="Continue shopping"
        android:id="@+id/btnOpenNextactivity"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>